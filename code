<!DOCTYPE html>
<html>
  <body>

    <H1>Pusca</H1>
    <H3>de Nichita Stanescu</H3>
    <div id="demo"></div>

    <script>
      parti = ["sus", "mijloc", "jos"];
      fLen = parti.length;

      text = "<p>Pusca este alcatuita din " + fLen + " parti: <br>"
      for (i = 0; i < fLen; i++) {
        text += "Partea de " + parti[i] + "<br>"  
      }
      text += "</p>";
      for (i = 0; i < fLen; i++) {
        text += "<p>Partea de " + parti[i] + " este compusa din: <br>"
        for (j = 0; j < fLen; j++) {
          text += "Partea de " + parti[j] + " a partii de " + parti[i] + "<br>"
        }
        "</p>";
      }
      document.getElementById("demo").innerHTML = text;
    </script>

  </body>
</html>
